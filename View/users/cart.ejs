<%- include('../include/nav-head.ejs'); %>.

<!-- breadcrumb -->
<div class="container">
  <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
    <a href="/" class="stext-109 cl8 hov-cl1 trans-04 text-decoration-none">
      Home
      <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
    </a>

    <span class="stext-109 cl4 text-decoration-none">
      <a class="text-decoration-none" style="color: #000" href="/cart"
        >Shoping Cart</a
      >
    </span>
  </div>
</div>

<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
  <div class="container">
    <%if(products.length>0){%> 
      
    <div class="row">
      <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
        <div class="m-l-25 m-r--38 m-lr-0-xl">
          <div class="">
            <table class="table-shopping-cart">
              <tr class="table_head">
                <th class="column-1 txt-center">Product</th>
                <th class="column-2 txt-center">Item</th>
                <th class="column-3 txt-center">Price</th>
                <th class="column-4 text-center">Quantity</th>
                <th class="column-5 txt-center">Total</th>
              </tr>
              <% products.forEach((products)=> {%>
              <tr class="table_row">
                <td class="column-1">
                  <div class="how-itemcart1">
                    <img
                      src="/product-images/<%=products.product.Image[0]%>"
                      alt="IMG"
                    />
                  </div>
                </td>
                <td class="column-2 txt-center"><%=products.product.Name%></td>
                <td class="column-3">Rs. <%=products.product.Price%></td>
                <td class="column-4">
                    <div class="wrap-num-product flex-w m-l-auto m-r-0">
                        <div onclick="changeQuantity('<%=products._id%>','<%=products.product._id%>',-1)"  class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                            <i class="fs-16 zmdi zmdi-minus"></i>
                        </div>

                        <input class="mtex4t-10 cl3 txt-center num-product" type="number" name="num-product1" min="1" max="5" value="<%=products.quantity%>">

                        <div onclick="changeQuantity('<%=products._id%>','<%=products.product._id%>',1)" class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                            <i class="fs-16 zmdi zmdi-plus"></i>
                        </div>
                    </div>
                </td>
                <td class="column-5"><i class="bi bi-currency-rupee"></i> <%=products.quantity*products.product.Price%></td>
                <td>
                  <span class="mt-0"
                    ><button
                      onclick="deleteCartProduct('<%=products._id%>','<%=products.product._id%>')"
                      type="button"
                      class="mr-5 btn-close"
                      aria-label="Close"
                    ></button
                  ></span>
                </td>
              </tr>
              <%})%> 
              
              </table>
              
            
          </div>
     
                 

    
        </div>
      </div>
     

      <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
        <div
          class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm"
        >
          <h4 class="mtext-109 cl2 p-b-30">Cart Summary</h4>

          <div class="flex-w flex-t bor12 p-b-13">
            <div class="ml-0">
              <span class="stext-110 cl2 m-r-3"> Total : </span>
            </div>
            <div class="float-right">
              <span class="ml-5 mtext-110 cl2 mr-3"> Rs. <%=Total%>.00</span>
            </div>
              <div class="ml-5 text-center mt-3 ">
                <span style="color: #808080;" class="ml-3 text-center">Have a Coupon?</span>
              </div>
              <div class=" text-center mt-1 ">
                <span style="color: #808080;" class="ml-4 text-center">Enter Coupon in Order Page</span>
              </div>
          </div>

          <div class="text-center mt-3">
          <a style="background-color: #d74850;" href="/checkout-page" style="font-size: 20px; width: 250px;height: 40px;" class="text-white py-1 btn btn rounded-pill">Proceed To Checkout</a>
        </div>
          <div class="mt-3 text-center">
          <a href="/product" class="shopping-button">Continue Shopping</a>
        </div>
      
        </div>
      </div>
    </div>
    <%} else { %>
        <div class="col-12">
          <div class="text-center">
            <div>
              <img src="https://cdni.iconscout.com/illustration/free/thumb/empty-cart-4085814-3385483.png" alt="">
            </div>
            <div>
              <h4>Cart is Empty..</h4>
            </div>
            <div class="mt-5">
              <a style="background-color: #d74850;" class="btn btn text-white" href="/product" >Start Shopping  <i class="bi bi-arrow-right"></i> </a>
            </div>
          </div>
        </div>
      
    <% } %>
  </div>
</form>

<script>
  function changeQuantity(cartId, proId, count,quantity) {
    $.ajax({
      url: "/change-product-quantity",
      data: {
        cart: cartId,
        product: proId,
        count: count
      },
      method: "post",
      success: (response) => {
        
        //   Swal.fire({
        //   icon: "success",
        //   title: "Changed!..",
        //   text: "Quantity Changed",
        //   showConfirmButton: false,
        // });
        // setTimeout(() => {
          location.reload();
        // }, 1000);
        
      },
    });
  }
  function deleteCartProduct(cartId, proId) {
    Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, Remove from Cart!",
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: "/delete-cart-product/" + cartId + "/" + proId,
          method: "delete",
          success: (response) => {
            if (response.status) {
              Swal.fire({
                icon: "success",
                title: "Removed!",
                text: "Product Removed Successfully",
                showConfirmButton: false,
              });
              setTimeout(() => {
                location.reload();
              }, 1000);
            }
          },
        });
      }
    });
  }
</script>

