<script>
    function addToCart(proId){
			$.ajax({
				url:'/add-to-cart/'+proId,
				method:'get',
				success:(response)=>{
                    if(response.status){
                        Swal.fire({
						icon: 'success',
						title: 'Hooray!..',
						text: 'Successfully Added To the Cart',
						showConfirmButton: false,
						})
						setTimeout(()=>{
							location.reload()
						},1000)
                    }else{
                        Swal.fire({
						icon: 'warning',
						title: 'Ooops..',
						text: 'Please login to Explore',
						showConfirmButton: true,
						})
                    }
				
				}
			})
		}
    function addToWishList(proId){
			console.log(proId)
			$.ajax({
				url:'/add-to-wishlist/'+proId,
				method:'post',
				success:(response)=>{
                    if(response.status){
                        Swal.fire({
                        icon: 'success',
                        title: 'Hooray!..',
                        text: 'Successfully Added To the Wishlist',
                        showConfirmButton: false,
                        })
                        setTimeout(()=>{
                        location.reload()
                    },800)
                    }else{
                        Swal.fire({
                        icon: 'info',
                        title: 'Soorry....',
                        text: 'Please login to Explore',
                        showConfirmButton: true,
                        })
                    }
                    
                   
				}
			})
		}

</script>
