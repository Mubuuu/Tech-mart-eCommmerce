<%- include('../include/nav-head.ejs'); %>.

<style>
  a{
      text-decoration: none;
  }
</style>

<div class="main container justify-content-center">
  <section>
    <%if(orderDetails.length>0){%>
    <div class="container mb-2 m-t-20 mycustomOne" id="myInvoice">
      <h2 class="fw-bold pt-5 text-center">Order Details</h2>

      <table class="table mt-5">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">IMAGE</th>
            <th scope="col">PRODUCT</th>
            <th scope="col">PRICE</th>
            <th scope="col">QUANTITY</th>

            <th>TOTAL</th>
          </tr>
        </thead>
        <tbody>
          <%orderDetails.forEach((orderDetails,index)=>{%>
          <tr>
            <td><%=index+1%></td>
            <td>
              <img
                style="width: 70px; height: 70px"
                src="/product-images/<%=orderDetails.product.Image[0]%>"
                alt=""
              />
            </td>
            <td><%=orderDetails.product.Name%></td>
            <td>
              <p class="text-muted"><%=orderDetails.product.Price%></p>
            </td>
            <td><%=orderDetails.quantity%></td>

            <td class="column-5" id="total{{ this.productId._id }}">
              <h5 class="text-muted" style="font-size: 15px">
                ₹.<%=orderDetails.proTotal%>
              </h5>
            </td>
          </tr>
          <%})%>
        </tbody>
      </table>
      <div class="row">
        <div class="col border">
          <div
            style="background-color: #d74850"
            class="text-white mt-3 p-3 text-center"
          >
            <h4>Billing Address</h4>
          </div>
          <div class="mt-3">

            <div class="d-flex">
              <div class="ml-4">
                <h4 class="fw-bold">Name <span class="ml-5 px-2">:</span></h4>
              </div>
              <div class="ml-3">
                <h4><%=orderAddress.Name%></h4>
              </div>
            </div>
            <div class="d-flex">
              <div class="ml-4">
                <h4 class="fw-bold"> Phone <span class="ml-5 px-1">:</span> </h4>
              </div>
              <div class="ml-3">
                <h4><%=orderAddress.Phone%></h4>
              </div>
            </div>
            <div class="d-flex">
              <div class="ml-4">
                <h4 class="fw-bold">Pincode <span class="ml-4 px-2">:</span></h4>
              </div>
              <div class="ml-3">
                <h4><%=orderAddress.Pincode%></h4>
              </div>
            </div>
            <div class="d-flex">
              <div class="ml-4">
                <h4 class="fw-bold">Address <span class="ml-4 px-2">:</span></h4>
              </div>
              <div class="ml-3">
                <h4><%=orderAddress.Address%></h4>
              </div>
            </div>
            <div class="d-flex">
              <div class="ml-4">
                <h4 class="fw-bold">City<span class="ml-4 px-5">:</span></h4>
              </div>
              <div class="ml-3">
                <h4><%=orderAddress.City%></h4>
              </div>
            </div>
            <div class="d-flex">
              <div class="ml-4">
                <h4 class="fw-bold">State <span class="ml-5 px-3">:</span> </h4>
              </div>
              <div class="ml-3">
                <h4><%=orderAddress.State%></h4>
              </div>
            </div>
            <div class="d-flex">
              <div class="ml-4">
                <h4 class="fw-bold">Landmark <span class="ml-1 px-1">:</span></h4>
              </div>
              <div class="ml-3">
                <h4><%=orderAddress.Street%></h4>
              </div>
            </div>
          </div>
        </div>
        <div class="col border">
          <div class="pt-2">
            <div class="text-center">
              <h3 style="color: #d74850" class="fw-bold mb-0 mt-3">
                Order Summary
              </h3>
            </div>
            <div class="col">
              <p class="text-muted mb-0 mt-5" style="font-size: 22px">
                <span class="fw-bold me-4">Sub Total</span>₹.
                <%=order.TotalAmount%>.00/-
              </p>
              <p class="text-muted mb-0 mt-5" style="font-size: 22px">
                <span class="fw-bold me-4">Discount</span>₹.
                <%=order.discount%>.00/-
              </p>
              <p class=" mb-0 mt-5" style="font-size: 25px">
                <span class="fw-bold me-4">Grand Total</span>₹.
                <%=order.grandTotal%>.00/-
              </p>
            </div>
          </div>
        </div>
      </div>

      <%if(order.status=='Delivered'){%>
    <div class="text-center mt-3">
       <a href="/invoice/<%=order._id%>" class="btn-success px-2 text-decor">
        Download Invoice
      </a>
    </div>
    <br />
  
    <%}%>
    <%}%>
  </section>
</div>
<%- include('../include/footer.ejs'); %>.
